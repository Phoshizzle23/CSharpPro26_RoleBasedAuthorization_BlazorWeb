@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
<h1>Application Roles</h1>

<p>
    <a asp-action="Create">Create New Role</a>
</p>

<table class="table table-bordered">
    <thread>
        <tr>
            <th>@Html.DisplayNameFor(model=>model.Id)</th>
            <th>@Html.DisplayNameFor(model=>model.Name)</th>
            <th>@Html.DisplayNameFor(model=>model.NormalizedName)</th>
            <th></th>
        </tr>
    </thread>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th>@Html.DisplayFor(modelitem=>item.Id)</th>
                <th>@Html.DisplayFor(modelitem=>item.Name)</th>
                <th>@Html.DisplayFor(modelitem=>item.NormalizedName)</th>
            </tr>
        }
    </tbody>
</table>